<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorGreen"
        android:text="我的预约"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:gravity="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="进行中："
        android:textSize="20sp"
        android:textColor="@color/colorGreen" />
    <LinearLayout
        android:id="@+id/dingdan1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/line"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="文心二路"
            android:textSize="25sp"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="订单类型：短期预约\n车位状态：使用计时中\n订单状态：未完成\n下单时间：2019年9月3日 15:10"
            android:textSize="15sp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dingdan2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/line"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="深圳大学"
            android:textSize="25sp"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="订单类型：长期预约\n车位状态：未使用\n订单状态：未完成\n下单时间：2019年9月1日 13:10"
            android:textSize="15sp"
            android:gravity="center_vertical"/>

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="已完成："
        android:textSize="20sp"
        android:textColor="@color/colorGreen" />

    <LinearLayout
        android:id="@+id/dingdan3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/line"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="文心公园"
            android:textSize="25sp"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="订单类型：长期预约\n车位状态：已结束\n订单状态：已完成\n下单时间：2019年8月10日 13:10"
            android:textSize="15sp"
            android:gravity="center_vertical"/>

    </LinearLayout>
<LinearLayout
        android:visibility="gone"
        android:id="@+id/dingdan4"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/line"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="文心二路"
            android:textSize="25sp"
            android:gravity="center_vertical"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="订单类型：短期预约\n车位状态：使用计时中\n订单状态：未完成\n下单时间：2019年9月3日 15:10"
            android:textSize="15sp"
            android:gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>